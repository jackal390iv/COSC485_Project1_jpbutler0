    public void because_Linux_Hates_Pathing() {

        DFA.add("M = { States, Alphabet, Transition Functions, Starting State, Final States }");
        DFA.add("where,");
        DFA.add("States = { q0, q1, q2 },");
        DFA.add("Alphabet = { a, b },");
        DFA.add("Starting State = q0,");
        DFA.add("Final States = { q2 },");
        DFA.add("Transition Functions = {");
        DFA.add("( q0, a, q1 ),");
        DFA.add("( q1, a, q1 ),");
        DFA.add("( q1, b, q2 )");
        DFA.add("}");

        String.add("aaaaabb");
        String.add("aaaaaaaa");
        String.add("aaaaaaab");
        String.add("bbbbbbbbbb");

        NFA.add("M = { States, Alphabet, Transition Functions, Starting State, Final States }");
        NFA.add("where,");
        NFA.add("States = { q0, q1, q2 },");
        NFA.add("Alphabet = { a, b },");
        NFA.add("Starting State = q0,");
        NFA.add("Final States = { q2 },");
        NFA.add("Transition Functions = {");
        NFA.add("( q0, e, q1 ),");
        NFA.add("( q0, a, q1 ),");
        NFA.add("( q0, a, q2 ),");
        NFA.add("( q1, a, q1 ),");
        NFA.add("( q1, b, q2 )");
        NFA.add("}");

        for (int i = 0; i < DFA.size(); i++) {
            String temp = DFA.get(i);
            temp = temp.trim().toLowerCase();
            DFA.remove(i);
            DFA.add(i, temp);
        }
        for (int i = 0; i < NFA.size(); i++) {
            String temp = NFA.get(i);
            temp = temp.trim().toLowerCase();
            NFA.remove(i);
            NFA.add(i, temp);
        }
        for (int i = 0; i < String.size(); i++) {
            String temp = String.get(i);
            temp = temp.trim().toLowerCase();
            String.remove(i);
            String.add(i, temp);
        }

    }

